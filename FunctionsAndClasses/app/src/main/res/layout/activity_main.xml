<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="makeSimpson"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameText"
            android:hint="Name"
            android:layout_marginBottom="443dp"
            app:layout_constraintStart_toStartOf="@+id/ageText" android:layout_marginLeft="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="1dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/ageText"
            app:layout_constraintStart_toStartOf="@+id/jobText" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" app:layout_constraintTop_toBottomOf="@+id/nameText"
            app:layout_constraintBottom_toTopOf="@+id/jobText"
            android:inputType="number" android:hint="Age"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/jobText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="85dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="85dp"
            app:layout_constraintTop_toBottomOf="@+id/ageText" android:layout_marginBottom="314dp"
            android:hint="Job"/>
    <TextView
            android:text="TextView"
            android:layout_width="160dp"
            android:layout_height="47dp"
            android:id="@+id/textV" android:gravity="center" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="106dp" android:layout_marginRight="106dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="146dp"
            android:layout_marginStart="146dp" android:layout_marginTop="91dp"
            app:layout_constraintTop_toBottomOf="@+id/jobText" android:layout_marginBottom="132dp"
            app:layout_constraintBottom_toTopOf="@+id/button"/>

</android.support.constraint.ConstraintLayout>