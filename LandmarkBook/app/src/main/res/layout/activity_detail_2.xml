<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Detail_Activity">

    <ImageView
            android:layout_width="149dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            android:layout_marginTop="183dp" android:layout_marginBottom="157dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="118dp"
            android:layout_marginStart="118dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="214dp"
            android:layout_height="0dp"
            android:id="@+id/textView" android:textSize="30sp"
            android:gravity="center" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="77dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="77dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="126dp"/>
</android.support.constraint.ConstraintLayout>