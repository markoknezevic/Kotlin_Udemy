<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <TextView
            android:text="Second Act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="176dp" android:layout_marginLeft="128dp" android:layout_marginStart="128dp"/>
    <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnChange" android:onClick="changeAct"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="128dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="128dp"
            android:layout_marginBottom="250dp"/>
</android.support.constraint.ConstraintLayout>