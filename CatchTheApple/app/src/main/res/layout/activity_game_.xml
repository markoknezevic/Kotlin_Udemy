<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Game_Activity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <android.support.v7.widget.GridLayout
            android:layout_width="373dp"
            android:layout_height="377dp"
            android:id="@+id/gridLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.636"
            android:layout_marginTop="176dp">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/img1"
                app:layout_row="0"
                app:layout_column="0" android:onClick="scoreInc"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/img2"
                app:layout_row="0"
                app:layout_column="1" android:onClick="scoreInc"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/img3"
                app:layout_row="0"
                app:layout_column="2" android:onClick="scoreInc"/>


        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/img4"
                app:layout_row="1"
                app:layout_column="0" android:onClick="scoreInc"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/img5"
                app:layout_row="1"
                app:layout_column="1" android:onClick="scoreInc"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/img6"
                app:layout_row="1"
                app:layout_column="2" android:onClick="scoreInc"/>


        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/img7"
                app:layout_row="2"
                app:layout_column="0" android:onClick="scoreInc"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/img8"
                app:layout_row="2"
                app:layout_column="1" android:onClick="scoreInc"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/img9"
                app:layout_row="2"
                app:layout_column="2" android:onClick="scoreInc"/>


    </android.support.v7.widget.GridLayout>
    <TextView
            android:text="Score: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtScore" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="156dp"
            android:layout_marginStart="156dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="78dp"/>
</android.support.constraint.ConstraintLayout>